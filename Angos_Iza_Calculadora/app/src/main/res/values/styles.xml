<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FunctionalButtons">
        <item name="android:textSize">40sp</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:textColor">@color/colorFuncBtntTxt</item>
        <item name="android:background">@drawable/func_round_rectangle_buttons</item>
    </style>

    <style name="NumberButtons">
        <item name="android:textSize">40sp</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:textColor">@color/colorNumBtnTxt</item>
        <item name="android:background">@drawable/num_round_rectangle_button</item>
    </style>
    
    <style name="BtnIgual">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/colorIgBtnTxt</item>
        <item name="android:background">@drawable/ig_round_rectangle_button</item>
    </style>
</resources>
