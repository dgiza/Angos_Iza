<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<GridLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:columnCount="4"
    android:rowCount="8"
    tools:context=".MainActivity">
<TextView
    android:id="@+id/infoTextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_column="0"
    android:layout_columnSpan="4"
    android:layout_marginTop="2dp"
    android:textAlignment="textEnd"
    android:layout_gravity="end"
    android:layout_row="0"
    android:textSize="30sp"
    />
<EditText
    android:id="@+id/editText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_column="0"
    android:layout_columnSpan="4"
    android:textAlignment="textEnd"
    android:layout_gravity="end"
    android:layout_row="1"
    android:lines="2"
    android:maxLines="2"
    android:textSize="50sp"
    />

    <Button
        android:id="@+id/btn_Mc"
        android:text="MC"
        style="@style/FunctionalButtons"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_columnWeight="1"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        />
    <Button
        android:id="@+id/btn_Mp"
        android:text="M+"
        style="@style/FunctionalButtons"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_columnWeight="1"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_gravity="bottom"
        />
    <Button
        android:id="@+id/btn_Mm"
        android:text="M-"
        style="@style/FunctionalButtons"
        android:layout_column="2"
        android:layout_row="2"
        android:layout_columnWeight="1"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_gravity="bottom"
        />
    <Button
        android:id="@+id/btn_Mr"
        android:text="MR"
        style="@style/FunctionalButtons"
        android:layout_column="3"
        android:layout_row="2"
        android:layout_columnWeight="1"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_gravity="bottom"
        />

    <!-- Primera Linea de Botones-->
    <Button
        android:id="@+id/btn_Clear"
        android:text="C"
        style="@style/FunctionalButtons"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_columnWeight="1"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        />

    <Button
        android:id="@+id/btn_Borrar"
        android:text="del"
        style="@style/FunctionalButtons"
        android:layout_column="3"
        android:layout_row="3"
        android:layout_columnWeight="1"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        />
    <Button
        android:id="@+id/btn_Division"
        android:text="/"
        style="@style/FunctionalButtons"
        android:layout_column="1"
        android:layout_row="3"
        android:layout_columnWeight="1"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        />
    <Button
        android:id="@+id/btn_Multiplicacion"
        android:text="X"
        style="@style/FunctionalButtons"
        android:layout_column="2"
        android:layout_row="3"
        android:layout_columnWeight="1"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        />

    <!--Segunda Linea de botones -->
    <Button
        android:id="@+id/btn_Siete"
        android:text="7"
        style="@style/NumberButtons"
        android:layout_column="0"
        android:layout_row="4"
        android:layout_columnWeight="1"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        />

    <Button
        android:id="@+id/btn_Ocho"
        android:text="8"
        style="@style/NumberButtons"
        android:layout_column="1"
        android:layout_row="4"
        android:layout_columnWeight="1"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        />

    <Button
        android:id="@+id/btn_Nueve"
        android:text="9"
        style="@style/NumberButtons"
        android:layout_column="2"
        android:layout_row="4"
        android:layout_columnWeight="1"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        />

    <Button
        android:id="@+id/btn_Menos"
        android:text="-"
        style="@style/FunctionalButtons"
        android:layout_column="3"
        android:layout_row="4"
        android:layout_columnWeight="1"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        />
    <!--Tercera Linea de botones -->
    <Button
        android:id="@+id/btn_Cuatro"
        android:text="4"
        style="@style/NumberButtons"
        android:layout_column="0"
        android:layout_row="5"
        android:layout_columnWeight="1"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        />

    <Button
        android:id="@+id/btn_Cinco"
        android:text="5"
        style="@style/NumberButtons"
        android:layout_column="1"
        android:layout_row="5"
        android:layout_columnWeight="1"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        />

    <Button
        android:id="@+id/btn_Seis"
        android:text="6"
        style="@style/NumberButtons"
        android:layout_column="2"
        android:layout_row="5"
        android:layout_columnWeight="1"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        />

    <Button
        android:id="@+id/btn_Sumar"
        android:text="+"
        style="@style/FunctionalButtons"
        android:layout_column="3"
        android:layout_row="5"
        android:layout_columnWeight="1"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        />

    <!--Cuarta Linea de botones -->
    <Button
        android:id="@+id/btn_Uno"
        android:text="1"
        style="@style/NumberButtons"
        android:layout_column="0"
        android:layout_row="6"
        android:layout_columnWeight="1"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        />

    <Button
        android:id="@+id/btn_Dos"
        android:text="2"
        style="@style/NumberButtons"
        android:layout_column="1"
        android:layout_row="6"
        android:layout_columnWeight="1"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        />

    <Button
        android:id="@+id/btn_Tres"
        android:text="3"
        style="@style/NumberButtons"
        android:layout_column="2"
        android:layout_row="6"
        android:layout_columnWeight="1"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        />

    <!--Quinta Linea de botones -->

    <Button
        android:id="@+id/btn_Igual"
        style="@style/BtnIgual"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_row="6"
        android:layout_rowSpan="2"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_vertical"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:text="=" />
    <Button
        android:id="@+id/btn_Cero"
        android:text="0"
        style="@style/NumberButtons"
        android:layout_column="0"
        android:layout_row="7"
        android:layout_columnWeight="1"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="2"
        />

    <Button
        android:id="@+id/btn_Punto"
        android:text="."
        style="@style/NumberButtons"
        android:layout_column="2"
        android:layout_row="7"
        android:layout_columnWeight="1"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        />


    <!--Comentario
        <Button
            android:id="@+id/btn_DobleCero"
            android:text="00"
            style="@style/NumberButtons"
            android:layout_column="2"
            android:layout_row="5"
            android:layout_columnWeight="1"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            />
    -->



    <!--
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_margin="2dp"
            >
            <include
                layout="@layout/calc_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />


        </LinearLayout>
        -->



</GridLayout>
</layout>